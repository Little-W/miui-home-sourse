<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/launcher_menu_pressed_color" />
            <corners android:bottomLeftRadius="@dimen/launcher_menu_bg_radius" android:bottomRightRadius="@dimen/launcher_menu_bg_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:bottomLeftRadius="@dimen/launcher_menu_bg_radius" android:bottomRightRadius="@dimen/launcher_menu_bg_radius" />
        </shape>
    </item>
</selector>