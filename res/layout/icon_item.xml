<?xml version="1.0" encoding="utf-8"?>
<com.miui.home.smallwindow.ItemView
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@id/container"
    android:layout_width="70.0dip"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@id/icon"
        android:layout_width="52.0dip"
        android:layout_height="52.0dip"
        android:scaleType="fitCenter"
        android:importantForAccessibility="no" />
    <TextView
        android:textSize="@dimen/small_window_item_title_text_size"
        android:textColor="@color/small_window_item_title_text_color"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_window_item_title_margin_top"
        android:singleLine="true"
        android:importantForAccessibility="no"
        android:fontFamily="mipro-medium" />
</com.miui.home.smallwindow.ItemView>