<?xml version="1.0" encoding="utf-8"?>
<com.miui.home.launcher.ShortcutIcon
    android:layout_gravity="center"
    android:focusable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animationCache="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@id/icon_container"
        android:paddingLeft="@dimen/icon_padding_side"
        android:paddingTop="@dimen/icon_padding_top"
        android:paddingRight="@dimen/icon_padding_side"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:id="@id/loading_container"
            android:visibility="gone"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.miui.home.launcher.LauncherIconImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recommend_icon_bg"
                android:scaleType="fitCenter" />
            <ImageView
                android:layout_gravity="center|left|top"
                android:id="@id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_loading_item_padding"
                android:layout_marginTop="@dimen/recommend_loading_item_padding"
                android:src="@drawable/recommend_loading_item" />
            <ImageView
                android:layout_gravity="center|right|top"
                android:id="@id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/recommend_loading_item_padding"
                android:layout_marginRight="@dimen/recommend_loading_item_padding"
                android:src="@drawable/recommend_loading_item"
                android:pivotX="50.0%"
                android:pivotY="50.0%"
                android:rotation="90.0" />
            <ImageView
                android:layout_gravity="bottom|center|right"
                android:id="@id/item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/recommend_loading_item_padding"
                android:layout_marginBottom="@dimen/recommend_loading_item_padding"
                android:src="@drawable/recommend_loading_item"
                android:pivotX="50.0%"
                android:pivotY="50.0%"
                android:rotation="180.0" />
            <ImageView
                android:layout_gravity="bottom|center|left"
                android:id="@id/item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_loading_item_padding"
                android:layout_marginBottom="@dimen/recommend_loading_item_padding"
                android:src="@drawable/recommend_loading_item"
                android:pivotX="50.0%"
                android:pivotY="50.0%"
                android:rotation="270.0" />
        </FrameLayout>
        <com.miui.home.launcher.LauncherIconImageView
            android:layout_gravity="center"
            android:id="@id/icon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />
    </FrameLayout>
    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/icon_container"
        android:layout_centerHorizontal="true"
        layout="@layout/icon_title" />
</com.miui.home.launcher.ShortcutIcon>