<?xml version="1.0" encoding="utf-8"?>
<com.miui.home.launcher.FolderIcon
    android:layout_gravity="center"
    android:focusable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animationCache="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@id/icon_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:paddingLeft="@dimen/icon_padding_side"
            android:paddingTop="@dimen/icon_padding_top"
            android:paddingRight="@dimen/icon_padding_side"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.miui.home.launcher.LauncherIconImageView
                android:layout_gravity="center"
                android:id="@id/icon_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />
            <com.miui.home.launcher.FolderIconPreviewContainer
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@id/preview_icons_container"
                android:layout_width="@dimen/folder_preview_width"
                android:layout_height="@dimen/folder_preview_height">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/folder_preview_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </com.miui.home.launcher.FolderIconPreviewContainer>
            <com.miui.home.launcher.LauncherIconImageView
                android:layout_gravity="center"
                android:id="@id/cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />
        </FrameLayout>
        <include
            layout="@layout/icon_message" />
    </FrameLayout>
    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/icon_container"
        android:layout_centerHorizontal="true"
        layout="@layout/icon_title" />
</com.miui.home.launcher.FolderIcon>